<fieldset>
    <legend>Account</legend>
    <div id="account">
        <div>
            Hello
        </div>
        <div>
            <div>
                <label>Username:</label>
                <input disabled type="text" value="<%=profile.username%>">
            </div>
        </div>
        <div>
            <div>
                <label>Password:</label>
            </div>
            <button id="password_button" onclick="password_edit();">Edit</button>
        </div>
        <div id="password_box">

        </div>
        <div>
            <div>
                <label>Email:</label>
                <input disabled type="text" id="email_title" value="<%=profile.email%>">
            </div>
            <button id="email_button" onclick="email_edit();">Edit</button>
        </div>
        <div id="email_box">

        </div>
    </div>
</fieldset>
<fieldset style="margin-top:20px">
    <legend>Profile</legend>
    <div id="profile">
        <div>
            Hello
        </div>
        <div>
            <div>
                <label>Nationality:</label>
            </div>
            <button id="nationality_button" onclick="nationality_edit();">Edit</button>
        </div>
        <div id="nationality_box">
            <div>
                <dl>
                    <dd>
                        <div>
                            <label>Continent:</label>
                            <input type="hidden" id="continent_id" value="<%=profile.continent_id%>">
                            <input type="text" id="continent_name" value="">
                        </div>
                        <div>
                            <label>Country:</label>
                            <input type="hidden" id="country_id" value="<%=profile.country_id%>">
                            <input type="text" id="contry_name" value="">
                        </div>
                    </dd>
                </dl>
                
            </div>
        </div>
        <div>
            <div>
                <label>Location:</label>
            </div>
            <button id="location_button" onclick="location_edit();">Edit</button>
        </div>
        <div id="location_box">
            <div>
                <dl>
                    <dd>
                        <div>
                            <label>Continent:</label>
                            <input type="text" value="">
                        </div>
                        <div>
                            <label>Region:</label>
                            <input type="text" value="">
                        </div>
                        <div>
                            <label>City:</label>
                            <input type="text" value="">
                        </div>
                    </dd>
                </dl>
            </div>
        </div>
        <div>

        </div>
        <div>
            <div>
                <label>Intro:</label>
            </div>
            <button>Edit</button>
        </div>
        <div>
            <textarea rows="10" cols="80"></textarea>
        </div>
    </div>
</fieldset>